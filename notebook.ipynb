import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

# Load dataset
df = pd.read_csv("weather_cleaned.csv")
print(df.head())

# Convert date format
df["Date"] = pd.to_datetime(df["Date"])

# Statistics
print("Mean Temperature:", df["Temperature"].mean())
print("Max Temperature:", df["Temperature"].max())
print("Min Temperature:", df["Temperature"].min())

# Line plot: Temperature Trend
plt.figure(figsize=(8,4))
plt.plot(df["Date"], df["Temperature"])
plt.title("Daily Temperature Trend")
plt.xlabel("Date")
plt.ylabel("Temperature (°C)")
plt.savefig("plots/daily_temp.png")
plt.close()

# Bar Chart: Monthly Rainfall
df.groupby(df["Date"].dt.month)["Rainfall"].sum().plot(kind="bar")
plt.title("Monthly Rainfall Total")
plt.xlabel("Month")
plt.ylabel("Rainfall (mm)")
plt.savefig("plots/monthly_rainfall.png")
plt.close()

# Scatter Plot: Humidity vs Temperature
plt.scatter(df["Temperature"], df["Humidity"])
plt.title("Humidity vs Temperature")
plt.xlabel("Temperature (°C)")
plt.ylabel("Humidity (%)")
plt.savefig("plots/scatter_humidity_temp.png")
plt.close()

# Saving cleaned data again (optional)
df.to_csv("weather_cleaned.csv", index=False)

